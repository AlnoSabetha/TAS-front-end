@page "/studentpage"

<h3 align="center">Student List</h3>

<table class="table table-striped">
    <thead>
        <tr>
            <th>St. ID</th>
            <th>Nama Belakang</th>
            <th>Nama Depan</th>
            <th>Tanggal Masuk</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var stu in Students)
        {
            <tr>
                <td>@stu.studentID</td>
                <td>@stu.lastName</td>
                <td>@stu.firstName</td>
                <td>@stu.enrollmentDate</td>
              <td><a href="@($"studentdetail/{stu.studentID}")" class="btn btn-primary">details</a>
              <a href="#" class="btn btn-warning m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a></td>
            </tr>
            
        }
    </tbody>
</table>